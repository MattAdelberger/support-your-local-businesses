<p id="notice"><%= notice %></p>

<style>
  .bgimage {
    width:100%;
    height:300px;
    background: url(<%=@city.image_url%>);
    background-repeat: no-repeat;
    background-position: center;
    background-size:cover;
    background-attachment: fixed;
  }

  h1 {
    padding-top: 100px;
    font-size: 150px;
  }
</style>

<section class="bgimage">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <center>
        <h1><%= @city.name %></h1>
        </center>
      </div>
    </div>
  </div>
</section>
<div class="container">
<% if @city.businesses.length > 0 %>
<p id="notice"><%= notice %></p>
<%  @city.businesses.each do |business| %>
  <div class="col-sm-6">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%=business.name%></h5>
        <h5 class="card-title"><%=business.address%></h5>

        <%= link_to  "Website" , business.website, class: "btn btn-info" %>
        <%= link_to  "Gift Card or Online Store" , business.gift_card_link, class: "btn btn-info" %>

      </div>
    </div>
  </div>
<% end %>

<% elsif %>
<h4>No Businesses for this city!</h4>
<% end %>
<%= link_to 'Add a Business!', new_city_business_path(city_id: @city.name), class: "btn btn-primary" %>
</div>
